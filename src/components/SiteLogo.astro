---
import { siteConfig } from "../site.config";
---

<a
  href="/"
  class="ring-offset-background focus-visible:ring-ring mr-6 flex items-center space-x-2 rounded-md focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-offset-2"
>
  <svg
    xmlns="http://www.w3.org/2000/svg"
    width="24"
    height="24"
    viewBox="0 0 24 24"
    fill="none"
    stroke="currentColor"
    stroke-width="2"
    stroke-linecap="round"
    stroke-linejoin="round"
    class="size-10 text-pink-600"
  >
    <path d="M7.9 20A9 9 0 1 0 4 16.1L2 22Z"></path>
    <path
      d="M15.8 9.2a2.5 2.5 0 0 0-3.5 0l-.3.4-.35-.3a2.42 2.42 0 1 0-3.2 3.6l3.6 3.5 3.6-3.5c1.2-1.2 1.1-2.7.2-3.7"
    ></path>
  </svg>
  <span class="text-2xl font-bold">
    {siteConfig.title}
  </span>
</a>
