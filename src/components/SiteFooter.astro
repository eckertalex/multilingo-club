---
import { siteConfig } from "../siteConfig";
import SiteLogo from "./SiteLogo.astro";
---

<footer class="pb-16 pt-24">
  <div class="grid grid-cols-2 gap-16 md:grid-cols-4">
    <div class="col-span-2 flex flex-col space-y-6">
      <SiteLogo />
      <p class="text-gray-500 text-xl">
        {siteConfig.description}
      </p>
    </div>
    <div>
      <div class="scroll-m-20 text-lg font-semibold tracking-tight">
        {"General"}
      </div>
      <ul class="mt-4 flex flex-col gap-4">
        <li>
          <a href="/impressum" class="text-gray-500 rounded-md">
            {"Impressum"}
          </a>
        </li>
        <li>
          <a href="/datenschutz" class="text-gray-500 rounded-md">
            {"Datenschutz"}
          </a>
        </li>
        <li>
          <a
            href={siteConfig.socials.instagram}
            class="text-gray-500 rounded-md"
          >
            {"Instagram"}
          </a>
        </li>
      </ul>
    </div>
    <div>
      <div class="scroll-m-20 text-lg font-semibold tracking-tight">
        {"Sitemap"}
      </div>
      <ul class="mt-4 flex flex-col gap-4">
        <li>
          <a href="/" class="text-gray-500 rounded-md">
            {"Home"}
          </a>
        </li>
        <li>
          <a href="/blog" class="text-gray-500 rounded-md">
            {"Blog"}
          </a>
        </li>
        <li>
          <a href="/a-propos" class="text-gray-500 rounded-md">
            {"A propos"}
          </a>
        </li>
        <li>
          <a href="/sitemap-index.xml" class="text-gray-500 rounded-md">
            {"Sitemap.xml"}
          </a>
        </li>
      </ul>
    </div>
  </div>
  <p class="text-gray-500 mt-8 text-sm">
    All rights reserved Â© MultilingoClub 2025
  </p>
</footer>
